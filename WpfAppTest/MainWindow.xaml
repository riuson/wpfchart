<Window x:Class="WpfAppTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTest"
        xmlns:chartPlotters="clr-namespace:Chart.Plotters;assembly=Chart"
        xmlns:chartGrids="clr-namespace:Chart.Grids;assembly=Chart"
        xmlns:chartTicks="clr-namespace:Chart.Ticks;assembly=Chart"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <chartPlotters:Plotter x:Name="plotter1"
                               Grid.Row="0" Grid.Column="1"/>
        <chartGrids:Grid x:Name="grid1"
                         Grid.Row="0" Grid.Column="1"/>
        <chartTicks:Ticks x:Name="ticksLeft"
                          Grid.Row="0" Grid.Column="0"/>
        <chartTicks:Ticks x:Name="ticksBottom"
                          Grid.Row="1" Grid.Column="1"/>
    </Grid>
</Window>
